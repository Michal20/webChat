@model webChat.ViewModels.RegisterUser

@{
    ViewData["Title"] = "Register";
    ViewBag.css = "site.css";

    //Layout = "_LayoutRegister";
}
<div class="box-register">
    <div class="box-title">
        <h1 class="fw-bold">Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
    </div>   
    <form asp-action="Register" enctype="multipart/form-data" class="form d-flex flex-column">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group my-2">
            <input asp-for="UserName" type="text" class="form-control" placeholder="Enter username" />
            <span asp-validation-for="UserName" class="text-danger">@ViewBag.Message</span>
        </div>
        <div class="form-group my-2">
            <input asp-for="NickName" type="text" class="form-control" placeholder="Enter nickname" />
            <span asp-validation-for="NickName" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <input asp-for="Password" class="form-control" placeholder="Enter Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <input asp-for="ProfileImage" type="file" class="custom-file-input" id="customFile" accept="image/png, image/jpeg" formnovalidate="formnovalidate">
            <span asp-validation-for="ProfileImage" class="text-danger"></span>
        </div>
        <div class="my-3"> 
            <input type="submit" value="Register" class="form-control btn btn-primary fw-bold" />
        </div>
        <div class="mb-3 have-account"> 
            <span class="text-light-white">Already have an account?</span> 
            <a asp-action="Login">Login</a>
        </div>
    </form>
<div/>
@section scripts{  
    <script type="text/javascript">  
        // Add the following code if you want the name of the file appear on select  
        $(".custom-file-input").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>  
}  
