@model webChat.ViewModels.LoginUser

@{
    ViewData["Title"] = "Login";
    ViewBag.css = "site.css";
    //Layout = "_LayoutRegister";
}
<div class="box-register">
    <div class="box-title">
        <h1 class="fw-bold">Login</h1>
    </div>   
    <form asp-action="Login" class="form d-flex flex-column">
        <div asp-validation-summary="ModelOnly" class="text-danger">@ViewBag.Message</div>
        <div class="form-group my-2">
            <input asp-for="UserName" type="text" class="form-control" placeholder="Enter username" />
            <span asp-validation-for="UserName" class="text-danger">@ViewBag.Message</span>
        </div>
        <div class="form-group my-2">
            <input asp-for="Password" class="form-control" placeholder="Enter Password"/>
            <span asp-validation-for="Password" class="text-danger">@ViewBag.Message</span>
        </div>
        <div class="my-3"> 
            <input type="submit" value="Login" class="form-control btn btn-primary fw-bold" />
        </div>
            

        <div class="mb-3 have-account"> 
            <span class="text-light-white">Don't have an account yet?</span> 
            <a asp-action="Register">Register</a>
        </div>
    </form>
<div/>

